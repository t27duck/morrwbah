.pull-right
  .entry-title=link_to "View", @entry.url, :target => '_blank', :class => "btn btn-primary"
%button.btn.btn-primary.read-entry{type: "button", data: {feed_id: @entry.feed_id, entry_id: @entry.id, read_state: @entry.read.to_s}}
  = "Mark #{@entry.read ? "Unread" : "Read"}"
%button.btn.btn-primary.star-entry{type: "button", data: {feed_id: @entry.feed_id, entry_id: @entry.id, starred_state: @entry.starred.to_s}}
  = @entry.starred ? "Unstar" : "Star"
.entry-meta
  ="by #{@entry.author}" if @entry.author
  ="#{time_ago_in_words(@entry.published)} ago"

.entry-body=@entry.body.html_safe

.clearfix

=jquery_mobile_page(:id => "new-folder") do
  = jquery_mobile_header do
    = jquery_mobile_back_button settings_dashboard_index_path
    %h1 New Folder
  
  = jquery_mobile_content do
    = error_messages_for @folder
    = form_for @folder, :html => { :class => "formarea" } do |f|
      %div
        = f.label :name
        = f.text_field :name
      %div
        %label.padding &nbsp;
        = f.submit
